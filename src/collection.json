{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "extends": [
    "@schematics/angular"
  ],
  "schematics": {
    "ssr": {
      "description": "A blank schematic.",
      "factory": "./ssr/index#ssr"
    },
    "page": {
      "description": "Create a Page Component and declare it as an entryComponent.",
      "factory": "./page/index#page",
      "schema": "./page/schema.json"
    },
    "route": {
      "description": "Create a Route Component and declare it in the routing module under its url.",
      "factory": "./route/index#route",
      "schema": "./route/schema.json"
    },
    "routing": {
      "description": "Create a routing module.",
      "aliases": [
        "rou"
      ],
      "factory": "./routing/index#routing",
      "schema": "./routing/schema.json"
    }
  }
}